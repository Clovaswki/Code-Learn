{{>navbarAdmin}}
<div class="p-3">
    <div class="my-3 p-3 bg-body rounded shadow-sm d-flex gap-3">
        <img src="/img/usersGroup.png" alt="users" width="40px" height="40px" style="opacity: .6;">
        <input 
            type="text" 
            class="form-control" 
            style="border-radius: 14px;" 
            placeholder="Procure aqui..."
            id="searchClientsAdm"
        >
    </div>
    <div class="my-3 p-3 bg-body rounded shadow-sm">
        <div class="body-usersAdm">
            <div class="row p-2 table-legend">
                <span class="col-sm-1 justify-content-center d-flex">
                    <p class="m-0 text-muted h6">#</p>
                </span>
                <span class="col-sm justify-content-center d-flex">
                    <p class="m-0 text-muted h6">Usuário</p>
                </span>
                <span class="col-sm justify-content-center d-flex">
                    <p class="m-0 text-muted h6">Status</p>
                </span>
                <span class="col-sm justify-content-center d-flex">
                    <p class="m-0 text-muted h6">Criação</p>
                </span>
                <span class="col-sm justify-content-center d-flex">
                    <p class="m-0 text-muted h6">Edit</p>
                </span>
            </div>
            <div class="__line__" style="height: 1px;"></div>
            {{#each users}}
                <div class="row p-2 userClient">
                    <span class="col-sm-1 d-flex align-items-center justify-content-center indexUser text-muted">
                       {{!-- inject index with script --}}
                    </span>
                    <span class="col-sm d-flex gap-2 align-items-center justify-content-center">
                        <div class="d-flex gap-2" style="width: 200px">
                            <img 
                                src="data:image/jpg;base64,{{file}}" 
                                alt="user" 
                                width="40px"
                                height="40px"
                                style="border-radius: 14px; object-fit: cover;"
                            >
                            <div>
                                <p class="m-0" style="line-height: 18px;">{{nome}}</p>
                                <small class="text-muted">{{email}}</small>
                            </div>
                        </div>
                    </span>
                    <span class="col-sm d-flex align-items-center justify-content-center">
                        {{#if adm}}
                        <p class="m-0 fs-6 blockquote text-muted">Administrador</p>
                        {{else}}
                        <p class="m-0 fs-6 blockquote text-muted">Usuário</p>
                        {{/if}}
                    </span>
                    <span class="col-sm d-flex align-items-center justify-content-center">
                        <p class="m-0 fs-6 blockquote text-muted dateText">{{date}}</p>
                    </span>
                    <span class="col-sm d-flex align-items-center justify-content-center">
                        <div class="d-flex gap-2 justify-content-between">
                            <a href="/admin/editclientes/{{_id}}" class="btn btn-primary d-flex align-items-center">
                                <img src="/img/edit.png" alt="edit" width="20px" height="20px">
                            </a>
                            <a href="#" class="btn btn-danger d-flex align-items-center">
                                <img src="/img/remove-user.png" alt="remove" width="20px" height="20px">
                            </a>
                        </div>
                    </span>
                </div>
                <div class="__line__" style="height: 1px;"></div>
            {{/each}}
        </div>
    </div>
</div>

<style>
    .userClient:hover{
        background-color: rgba(0, 0, 0, .03);
    }
</style>