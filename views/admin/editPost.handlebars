{{>navbarAdmin}}
<div class="my-3 p-3 bg-body rounded shadow-sm p-2 rounded card">

    <div>
        <h4 class="text-muted">Editar postagem</h4>
    </div>
    <hr class="opacity-25">

    <div class="d-flex flex-column">

        <form action="/admin/editpost/{{post._id}}" method="post">
            <div class="d-flex flex-column">
                <label for="" class="lead">Título</label>
                <textarea name="title" class="form-control" rows="3" style="resize: none; outline: 0;">
                    {{post.title}}
                </textarea>
            </div>
            <div class="d-flex flex-column">
                <label for="" class="lead">Descrição</label>
                <textarea name="description" class="form-control" rows="5" style="resize: none; outline: 0;">
                    {{post.description}}
                </textarea>
            </div>
            <div class="d-flex flex-column">
                <label for="" class="lead">Conteúdo</label>
                <textarea name="content" class="form-control" rows="20" style="resize: none; outline: 0;">
                    {{post.content}}
                </textarea>
            </div>
            <div class="mt-3">
                <button class="btn btn-primary" type="submit">Salvar</button>
            </div>
        </form>

    </div>

</div>